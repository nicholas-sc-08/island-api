{
  "compilerOptions": {
    // Node ESM
    "module": "nodenext",
    "moduleResolution": "NodeNext",

    // Node runtime
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    // Import behavior
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Dev
    "strict": true,
    "skipLibCheck": true,

    // Melhor para backends Node
    "sourceMap": true,
    "isolatedModules": false,
    "noUncheckedSideEffectImports": false,
    "verbatimModuleSyntax": true
  }
}